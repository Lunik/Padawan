# INIT Script for PadawanV6

PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
PID_FILE=/run/padawanv6.pid
LOG_FILE=/var/log/padawanv6.log

usage () {
  echo "Usage: $0 [start|stop|status|restart]" >&2
}

do_start () {
  echo "Starting PadawanV6..."
  /usr/bin/env padawanv6 & > $LOG_FILE 2>&1
  echo $! > $PID_FILE
}

do_stop () {
  if ! [ -f $PID_FILE ]; then
    echo "PadawanV6 is already stopped."
    exit 0
  fi

  pid=$(cat $PID_FILE)

  kill $pid

  rm $PID_FILE
}

do_status () {
  if ! [ -f $PID_FILE ]; then
    echo "PadawanV6 is stopped."
    exit 0
  fi

  pid=$(cat $PID_FILE)

  ps aux -p $pid > /dev/null
  if [ $? -eq 0 ]; then
    echo "PadawanV6 is running."
  else
    echo "PadawanV6 is not running."
  fi
}

case "$1" in
  start)
    do_start
    do_status
    ;;
  restart)
    do_stop
    do_start
    ;;
  status)
    do_status
    ;;
  stop)
    do_stop
    do_status
    exit $exit_code
    ;;
  *)
    usage
    exit 3
    ;;
esac
